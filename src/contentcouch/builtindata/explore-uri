# This is an example of how to explore with fancy borders and stuff
(contentcouch.apply-uri-processor
  (contentcouch.eval x-context-var:uri)
  operator=(contentcouch.concat
    "(contentcouch.explorify " x-context-var:uri "
    header=(contentcouch.let
      vars/page-title=(contentcouch.concat
        \"Index of \" x-context-var:uri)
      (contentcouch.eval
        (contentcouch.builtindata.get \"default-page-header-expression\"))
    )"
  )
)
